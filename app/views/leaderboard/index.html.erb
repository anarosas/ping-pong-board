<div class="container">

  <!-- Main component for a primary marketing message or call to action -->
  <div class="jumbotron">
    <h1>Leader Board</h1>
    <table  class="table table-hover">
      <thead>
        <tr>
          <th>Player A</th>
          <th>Wins</th>
          <th>Losses</th>
          <th>Global Score</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @players.each do |player| %>
          <tr>
            <td><%= player.name %></td>
            <td><%= player.wins %></td>
            <td><%= player.losses %></td>
            <td><%= player.global_score %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
