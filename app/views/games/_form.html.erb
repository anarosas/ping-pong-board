<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= select("game", "player_a_id", Player.all.collect {|p| [ p.name, p.id ] })%><br>
  </div>
  <div class="field">
    <%= select("game", "player_b_id", Player.all.collect {|p| [ p.name, p.id ] })%><br>
  </div>
  <div class="field">
    <%= f.label :duration %> Hours:Minutes<br>
    <%= f.time_select :duration %>
  </div>
  <div class="field">
    <%= f.label :score_player_a %><br>
    <%= f.number_field :score_player_a %>
  </div>
  <div class="field">
    <%= f.label :score_player_b %><br>
    <%= f.number_field :score_player_b %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
